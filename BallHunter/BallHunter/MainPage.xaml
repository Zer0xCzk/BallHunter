<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BallHunter.MainPage">

    <AbsoluteLayout x:Name="aLayout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"> 
        <Button AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.25, 0.1" AbsoluteLayout.LayoutFlags="All" Clicked="Button_Clicked" x:Name="startbutton" Text="Start Game"/>
        <Label AbsoluteLayout.LayoutBounds="0.5, 1, 0.1, 0.1" AbsoluteLayout.LayoutFlags="All" VerticalOptions="End" HorizontalOptions="Center" x:Name="score"/>
    </AbsoluteLayout>

</ContentPage>
